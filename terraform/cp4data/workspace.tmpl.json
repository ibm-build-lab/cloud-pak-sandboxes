{
  "name": "{{ WORKSPACE_NAME }}",
  "type": [
    "terraform_v0.12"
  ],
  "description": "IBM Cloud Schematics Workspace to deploy an OpenShift cluster sandbox for Cloud Pak for Data on IBM Cloud Classic",
  "tags": [
    "owner:{{ OWNER }}",
    "env:{{ ENV }}",
    "project:{{ PROJECT }}"
  ],
  "resource_group": "schematics",
  "template_repo": {
    "url": "https://github.com/ibm-hcbt/cloud-pak-sandboxes",
    "branch": "{{ BRANCH }}"
  },
  "template_data": [
    {
      "folder": "terraform/cp4data",
      "type": "terraform_v0.12",
      "variablestore": [
        {
          "name": "region",
          "value": "us-south",
          "type": "string"
        },
        {
          "name": "project_name",
          "value": "{{ PROJECT }}",
          "type": "string"
        },
        {
          "name": "owner",
          "value": "{{ OWNER }}",
          "type": "string"
        },
        {
          "name": "environment",
          "value": "{{ ENV }}",
          "type": "string"
        },
        {
          "name": "resource_group",
          "value": "cloud-pak-sandbox",
          "type": "string"
        },
        {
          "name": "cluster_id",
          "value": "{{ CLUSTER_ID }}",
          "type": "string"
        },
        {
          "name": "datacenter",
          "value": "dal10",
          "type": "string"
        },
        {
          "name": "private_vlan_number",
          "type": "string"
        },
        {
          "name": "public_vlan_number",
          "type": "string"
        },
        {
          "name": "storage_class_name",
          "value": "ibmc-file-custom-gold-gid",
          "type": "string"
        },
        {
          "name": "entitled_registry_key",
          "value": "{{ ENTITLED_KEY }}",
          "type": "string",
          "secure": true
        },
        {
          "name": "entitled_registry_user_email",
          "value": "{{ ENTITLED_KEY_EMAIL }}",
          "type": "string"
        },
        {
          "name": "install_watson_knowledge_catalog",
          "value": "false",
          "type": "bool"
        },
        {
          "name": "install_watson_studio",
          "value": "false",
          "type": "bool"
        },
        {
          "name": "install_watson_machine_learning",
          "value": "false",
          "type": "bool"
        },
        {
          "name": "install_watson_open_scale",
          "value": "false",
          "type": "bool"
        },
        {
          "name": "install_data_virtualization",
          "value": "false",
          "type": "bool"
        },
        {
          "name": "install_streams",
          "value": "false",
          "type": "bool"
        },
        {
          "name": "install_analytics_dashboard",
          "value": "false",
          "type": "bool"
        },
        {
          "name": "install_spark",
          "value": "false",
          "type": "bool"
        },
        {
          "name": "install_db2_warehouse",
          "value": "false",
          "type": "bool"
        },
        {
          "name": "install_db2_data_gate",
          "value": "false",
          "type": "bool"
        },
        {
          "name": "install_rstudio",
          "value": "false",
          "type": "bool"
        },
        {
          "name": "install_db2_data_management",
          "value": "false",
          "type": "bool"
        }
      ]
    }
  ]
}
